<!DOCTYPE html>
<html lang="ar">
<head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>Sawweb</title>
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
        <link rel="stylesheet" href="style.css">
        <link href="https://fonts.googleapis.com/css2?family=Cairo:wght@700&display=swap" rel="stylesheet">
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
        <link rel="stylesheet" href="dashboard.css" /> 
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />
        <link rel="stylesheet" href="suggestions.css" /> 



</head> 

<body class="black-window  d-flex flex-column min-vh-100">
        <main class="flex-grow-1">
                
                <div id="nav" class="header">
                        <a href="/dashboard">
                        <button class="sidebar-toggle">
                                <span class="sawwebColor textFont">الاقتراحات</span>
                                <i class="fas fa-arrow-right"></i>
                        </button>
                        </a>
                </div>

                <div class="suggestion-container">

                        <div class="suggestion">
                                <% posts.forEach(item => { %>
                                <div class="suggestion-post">
                                        <button class="suggestion-post-btn" 
                                        data-title="<%= item.title %>" 
                                        data-body="<%= item.body %>">  
                                                <span class="sawwebColor textFont textDirc"><%= item.title %></span>
                                                <small><%= item.body %></small>
                                        </button>
                                </div>
                                <% }) %>
                        </div>
                </div>
                <div class="overlay">
                        <div class = "pop-up-window">
                                <div class="header"> 
                                        <button class="close-btn textDirc">
                                                <i class="fas fa-times"></i>
                                        </button>
                                </div> 
                                <div class="contnent">

                                        <br><br>
                                        <h3 id="popup-title" class="textFont sawwebColor"></h3>
                                        <br><br>
                                        <p id="popup-body"></p>
                                        
                                </div>
        
                        </div>
                </div>
        </main>

        <script src="suggestions.js"></script>

  <%- include("includes/footer") %>
</body>
</html>